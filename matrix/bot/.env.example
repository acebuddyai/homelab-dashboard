# Matrix Bot Configuration Environment Variables
# Copy this file to .env and fill in your actual values

# Matrix Server Configuration
MATRIX_HOMESERVER_URL=https://your-matrix-server.com
MATRIX_BOT_USERNAME=@your-bot-username:your-server.com
MATRIX_BOT_PASSWORD=your-bot-password-here

# Room Configuration
MATRIX_TARGET_ROOM_ID=!your-room-id:your-server.com

# Bot Behavior Configuration
BOT_COMMAND_PREFIX=!bot
BOT_GREETING_MESSAGE=Hello! I'm your friendly Matrix bot. Type '!bot help' to see what I can do! ðŸ¤–

# Sync and Timeout Configuration
MATRIX_SYNC_TIMEOUT=30000

# Logging Configuration
BOT_LOG_LEVEL=INFO

# Storage Configuration
BOT_STORE_DIR=/app/store
