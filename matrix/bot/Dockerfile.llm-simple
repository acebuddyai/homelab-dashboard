FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libolm-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install only essential additional dependencies for LLM agent
RUN pip install --no-cache-dir aiohttp

# Copy agent code
COPY agents/ ./agents/
COPY llm_agent_standalone.py .

# Create directories
RUN mkdir -p /app/store

# Create a non-root user
RUN useradd -m -u 1000 llmagent && chown -R llmagent:llmagent /app
USER llmagent

# Set environment variables
ENV BOT_STORE_DIR=/app/store
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV OLLAMA_URL=http://ollama:11434
ENV DEFAULT_LLM_MODEL=llama3.2:latest
ENV LLM_MAX_TOKENS=2048
ENV LLM_TEMPERATURE=0.7

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Expose health check port (optional)
EXPOSE 8002

# Run the LLM agent
CMD ["python", "llm_agent_standalone.py"]
